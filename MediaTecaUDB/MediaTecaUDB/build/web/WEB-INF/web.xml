<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrestamosServlet</servlet-name>
        <servlet-class>Servlets.PrestamosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrestarServlet</servlet-name>
        <servlet-class>Servlets.PrestarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerEjemplaresServlet</servlet-name>
        <servlet-class>Servlets.ObtenerEjemplaresServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PagarPrestamoServlet</servlet-name>
        <servlet-class>Servlets.PagarPrestamoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrestamosServlet</servlet-name>
        <url-pattern>/PrestamosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrestarServlet</servlet-name>
        <url-pattern>/PrestarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerEjemplaresServlet</servlet-name>
        <url-pattern>/ObtenerEjemplaresServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PagarPrestamoServlet</servlet-name>
        <url-pattern>/PagarPrestamoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
